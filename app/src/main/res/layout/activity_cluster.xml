<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = " ● 이름,성별,나이,레벨"
            android:padding = "15dp"
            android:textSize = "16dp"
            android:layout_weight = "3.5"/>

        <EditText
            android:inputType = "text"
            android:id = "@+id/inputusername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:textSize = "16dp"
            android:layout_weight = "1"/>

        <EditText
            android:inputType = "text"
            android:hint = "여"
            android:id = "@+id/inputsex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:textSize = "16dp"
            android:layout_weight = "1"/>
        <EditText
            android:inputType = "text"
            android:hint = "2-"
            android:id = "@+id/inputage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:textSize = "16dp"
            android:layout_weight = "1"/>
        <EditText
            android:inputType = "text"
            android:id = "@+id/inputlev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:textSize = "16dp"
            android:layout_weight = "1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " ● 식당명 : "
            android:padding = "15dp"
            android:textSize = "16dp" />

        <EditText
            android:inputType = "text"
            android:id = "@+id/new_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:textSize = "16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = " ● 시간 : "
        android:padding = "15dp"
        android:textSize = "16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType = "number"
            android:id = "@+id/month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="16dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text = "월"
            android:layout_gravity = "center"/>
        <EditText
            android:inputType = "number"
            android:id = "@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="16dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text = "일"
            android:layout_gravity = "center"/>
        <EditText
            android:inputType = "number"
            android:id = "@+id/hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="16dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text = "시"
            android:layout_gravity = "center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = " ● 인원 : "
        android:padding = "15dp"
        android:textSize = "16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType = "number"
            android:id = "@+id/manypeople"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding = "15dp"
            android:layout_margin = "10dp"
            android:textSize = "20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "명"
            android:layout_gravity = "center"
            android:padding = "15dp"
            android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = " ● 상세 설명 : "
        android:padding = "15dp"
        android:textSize = "16dp"/>

    <EditText
        android:id = "@+id/detailex"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin = "15dp"
        android:textSize = "16dp"
        android:hint="내용을 입력하세요."
        android:textColorHint="@color/btnColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id = "@+id/commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight = "1"
            android:background="@drawable/btn_border"
            android:text = "등록"
            android:textSize="20dp"/>

        <Button
            android:id = "@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight = "1"
            android:background="@drawable/cluster_border"
            android:text = "취소"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>