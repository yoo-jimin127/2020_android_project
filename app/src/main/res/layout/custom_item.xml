<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/custom_item_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/restaurant"/>

    <TextView
        android:id="@+id/custom_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/custom_item_type_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop = "10dp"
        android:text = "Hello"/>

    <Button
        android:layout_toLeftOf="@id/custom_item_join"
        android:id="@+id/custom_item_cluster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "모집"
        android:background = "@drawable/cluster_border"
        android:textColor="#FFFFFF"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/custom_item_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text = "참여"
        android:background="@drawable/btn_border"/>

</RelativeLayout>